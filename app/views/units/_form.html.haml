= form_for @unit do |f|
  - if @unit.errors.any?
    #error_explanation
      %h2= "#{pluralize(@unit.errors.count, "error")} prohibited this unit from being saved:"
      %ul
        - @unit.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :lessor_id
    = f.number_field :lessor_id
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :unit_number
    = f.text_field :unit_number
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :state
    = f.text_field :state
  .field
    = f.label :postal_code
    = f.text_field :postal_code
  .field
    = f.label :total_rent
    = f.text_field :total_rent
  .field
    = f.label :payment_day
    = f.number_field :payment_day
  .actions
    = f.submit 'Save'
